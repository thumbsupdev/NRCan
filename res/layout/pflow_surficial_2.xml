<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView
        android:id="@+id/pflow_surficial_label_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pflow_label_method"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
            android:id="@+id/pflow_surficial_spinner_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp"
        	android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/pflow_surficial_label_azimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pflow_label_azimuth"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <EditText
        android:id="@+id/pflow_surficial_text_azimuth"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="-6dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0" />
    
    <LinearLayout
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical" >
        
        <Button
        android:id="@+id/pflow_surficial_button_azimuthup"
        android:layout_width="44dp"
        android:layout_height="28dp" />
        
        <Button
        android:id="@+id/pflow_surficial_button_azimuthdown"
        android:layout_width="44dp"
        android:layout_height="28dp"
        android:layout_marginTop="-10dp" />
        
        </LinearLayout>

    <SeekBar
        android:id="@+id/pflow_surficial_seekbar_azimuth"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp" />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pflow_surficial_label_plungedip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pflow_label_plungedip"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/pflow_surficial_text_plungedip"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
            	android:layout_marginRight="20dp"
                android:inputType="number" >

                <requestFocus />
            </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="28dp" >

            <TextView
                android:id="@+id/pflow_surficial_label_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pflow_label_age"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/pflow_surficial_button_age"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
            	android:layout_marginRight="20dp"
                android:text="@string/station_label_date" />

        </LinearLayout>

    </LinearLayout>
    
    <TextView
        android:id="@+id/pflow_surficial_label_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pflow_label_indicators"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
            android:id="@+id/pflow_surficial_spinner_indicators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp"
        	android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/pflow_surficial_label_defined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pflow_label_defined"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
            android:id="@+id/pflow_surficial_spinner_defined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp"
        	android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/pflow_surficial_label_relationship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pflow_label_relationship"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
            android:id="@+id/pflow_surficial_spinner_relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp"
        	android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>