<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView
        android:id="@+id/structure_label_fabric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/structure_label_fabric"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/structure_text_fabric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
     	android:layout_marginRight="20dp"
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLength="254"
        android:hint="@string/structure_label_fabric" >
    </EditText>
    
    <TextView
        android:id="@+id/structure_label_sense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/structure_label_sense"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/structure_text_sense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
     	android:layout_marginRight="20dp"
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLength="254"
        android:hint="@string/structure_label_sense" >
    </EditText>

</LinearLayout>