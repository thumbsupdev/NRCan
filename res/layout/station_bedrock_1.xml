<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/station_label_traverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_label_traverse"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/station_text_traverse"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                 android:hint="0"
                android:inputType="number" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="28dp" >

            <TextView
                android:id="@+id/station_label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_label_date"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/station_button_date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/station_label_date" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/station_label_elevation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/station_label_elevation"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/station_text_elevation"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="0"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/station_spinner_elevation"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <TextView
        android:id="@+id/station_label_easting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/station_label_easting"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/station_text_easting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
         android:hint="0"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/station_label_northing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/station_label_northing"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/station_text_northing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="0"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/station_label_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/station_label_latitude"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/station_text_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
         android:hint="0"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/station_label_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/station_label_longitude"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/station_text_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
         android:hint="0"
        android:inputType="numberDecimal" />

</LinearLayout>